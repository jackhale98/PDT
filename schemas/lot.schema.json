{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pdt.dev/schemas/lot.schema.json",
  "title": "LOT",
  "description": "A production lot / batch (Device History Record)",
  "type": "object",
  "required": ["id", "title", "status", "created", "author"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^LOT-[0-9A-Z]{26}$",
      "description": "Unique identifier (LOT prefix + ULID)"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Short descriptive title"
    },
    "lot_number": {
      "type": ["string", "null"],
      "description": "User-defined lot/batch identifier"
    },
    "quantity": {
      "type": ["integer", "null"],
      "minimum": 0,
      "description": "Quantity of units in this lot"
    },
    "lot_status": {
      "type": "string",
      "enum": ["in_progress", "on_hold", "completed", "scrapped"],
      "default": "in_progress",
      "description": "Production status of the lot"
    },
    "start_date": {
      "type": ["string", "null"],
      "format": "date",
      "description": "Production start date"
    },
    "completion_date": {
      "type": ["string", "null"],
      "format": "date",
      "description": "Production completion date"
    },
    "materials_used": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "component": {
            "type": ["string", "null"],
            "description": "Component ID (CMP-xxx)"
          },
          "supplier_lot": {
            "type": ["string", "null"],
            "description": "Supplier lot number (free text for traceability)"
          },
          "quantity": {
            "type": ["integer", "null"],
            "minimum": 0,
            "description": "Quantity used"
          }
        }
      },
      "description": "Materials used in production for traceability"
    },
    "execution": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "process": {
            "type": ["string", "null"],
            "description": "Process ID (PROC-xxx)"
          },
          "process_revision": {
            "type": ["integer", "null"],
            "description": "Process entity revision at time of execution"
          },
          "work_instructions_used": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "string",
                  "description": "Work instruction ID (WORK-xxx)"
                },
                "revision": {
                  "type": ["integer", "null"],
                  "description": "Revision at time of execution"
                }
              },
              "required": ["id"]
            },
            "description": "Work instructions used during this step"
          },
          "status": {
            "type": "string",
            "enum": ["pending", "in_progress", "completed", "skipped"],
            "default": "pending",
            "description": "Execution status of this step"
          },
          "started_date": {
            "type": ["string", "null"],
            "format": "date",
            "description": "Date step was started"
          },
          "completed_date": {
            "type": ["string", "null"],
            "format": "date",
            "description": "Date step was completed"
          },
          "operator": {
            "type": ["string", "null"],
            "description": "Operator who performed this step"
          },
          "operator_email": {
            "type": ["string", "null"],
            "format": "email",
            "description": "Operator email"
          },
          "notes": {
            "type": ["string", "null"],
            "description": "Notes about execution"
          },
          "signature_verified": {
            "type": ["boolean", "null"],
            "description": "Whether operator signature was verified (DHR compliance)"
          },
          "signing_key": {
            "type": ["string", "null"],
            "description": "Signing key ID (GPG/SSH) used for operator signature"
          },
          "commit_sha": {
            "type": ["string", "null"],
            "description": "Git commit SHA for this step completion"
          },
          "approval_status": {
            "type": ["string", "null"],
            "enum": ["not_required", "pending", "approved", "rejected", null],
            "description": "Approval status for PR-based sign-off"
          },
          "approvals": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "approver": {
                  "type": "string",
                  "description": "Approver name"
                },
                "email": {
                  "type": ["string", "null"],
                  "format": "email",
                  "description": "Approver email"
                },
                "role": {
                  "type": ["string", "null"],
                  "description": "Role of approver (e.g., quality, engineering)"
                },
                "timestamp": {
                  "type": "string",
                  "format": "date-time",
                  "description": "Timestamp of approval"
                },
                "comment": {
                  "type": ["string", "null"],
                  "description": "Comment/reason for approval"
                },
                "signature_verified": {
                  "type": ["boolean", "null"],
                  "description": "Whether signature was verified"
                },
                "signing_key": {
                  "type": ["string", "null"],
                  "description": "Signing key ID (GPG/SSH)"
                }
              },
              "required": ["approver", "timestamp"]
            },
            "description": "Approval records for this step"
          },
          "pr_number": {
            "type": ["integer", "null"],
            "description": "GitHub/GitLab PR number for approval workflow"
          },
          "data": {
            "type": "object",
            "additionalProperties": true,
            "description": "Measurement/inspection data (key-value pairs)"
          }
        }
      },
      "description": "Process execution records (DHR compliant)"
    },
    "notes": {
      "type": ["string", "null"],
      "description": "Production notes"
    },
    "git_branch": {
      "type": ["string", "null"],
      "description": "Git branch name for this lot's DHR workflow"
    },
    "branch_merged": {
      "type": "boolean",
      "default": false,
      "description": "Whether the lot branch has been merged to main"
    },
    "links": {
      "type": "object",
      "properties": {
        "product": {
          "type": ["string", "null"],
          "description": "Product being made (ASM or CMP ID)"
        },
        "processes": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Process entities in sequence"
        },
        "work_instructions": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Work instruction entities"
        },
        "ncrs": {
          "type": "array",
          "items": { "type": "string" },
          "description": "NCRs raised during production"
        },
        "results": {
          "type": "array",
          "items": { "type": "string" },
          "description": "In-process inspection results"
        }
      }
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "released", "obsolete"],
      "description": "Document status"
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "author": {
      "type": "string",
      "description": "Author name"
    },
    "entity_revision": {
      "type": "integer",
      "minimum": 1,
      "default": 1,
      "description": "Entity revision number"
    }
  },
  "additionalProperties": true
}
