{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pdt.dev/schemas/process.schema.json",
  "title": "Process",
  "description": "A manufacturing process definition",
  "type": "object",
  "required": ["id", "title", "status", "created", "author"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^PROC-[0-9A-Z]{26}$",
      "description": "Unique identifier (PROC prefix + ULID)"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Short descriptive title"
    },
    "description": {
      "type": "string",
      "description": "Detailed description"
    },
    "process_type": {
      "type": "string",
      "enum": ["machining", "assembly", "inspection", "test", "finishing", "packaging", "handling", "heat_treat", "welding", "coating"],
      "description": "Type of manufacturing process"
    },
    "operation_number": {
      "type": ["string", "null"],
      "description": "Operation number (e.g., OP-010)"
    },
    "equipment": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "equipment_id": { "type": "string" },
          "capability": { "type": "string" }
        }
      },
      "description": "Equipment used"
    },
    "parameters": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "value": { "type": "number" },
          "units": { "type": "string" },
          "min": { "type": "number" },
          "max": { "type": "number" }
        }
      },
      "description": "Process parameters"
    },
    "cycle_time_minutes": {
      "type": ["number", "null"],
      "description": "Cycle time in minutes"
    },
    "setup_time_minutes": {
      "type": ["number", "null"],
      "description": "Setup time in minutes"
    },
    "capability": {
      "type": ["object", "null"],
      "properties": {
        "cpk": { "type": "number" },
        "ppk": { "type": "number" },
        "sample_size": { "type": "integer" },
        "study_date": { "type": "string", "format": "date" }
      },
      "description": "Process capability data"
    },
    "operator_skill": {
      "type": "string",
      "enum": ["entry", "intermediate", "advanced", "expert"],
      "description": "Required operator skill level"
    },
    "safety": {
      "type": "object",
      "properties": {
        "ppe": {
          "type": "array",
          "items": { "type": "string" }
        },
        "hazards": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "description": "Safety requirements"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Tags for filtering"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "released", "obsolete"],
      "description": "Current status"
    },
    "links": {
      "type": "object",
      "properties": {
        "produces": {
          "type": "array",
          "items": { "type": "string" },
          "description": "IDs of components produced by this process"
        },
        "requirements": {
          "type": "array",
          "items": { "type": "string" },
          "description": "IDs of requirements this process implements"
        },
        "supplier": {
          "type": ["string", "null"],
          "description": "Supplier ID if process is outsourced"
        },
        "controls": {
          "type": "array",
          "items": { "type": "string" },
          "description": "IDs of control plan items for this process"
        },
        "work_instructions": {
          "type": "array",
          "items": { "type": "string" },
          "description": "IDs of work instructions for this process"
        },
        "risks": {
          "type": "array",
          "items": { "type": "string" },
          "description": "IDs of risks associated with this process"
        },
        "related_to": {
          "type": "array",
          "items": { "type": "string" },
          "description": "IDs of other related entities"
        }
      }
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "author": {
      "type": "string",
      "description": "Author name"
    },
    "entity_revision": {
      "type": "integer",
      "minimum": 1,
      "default": 1,
      "description": "Entity revision number"
    }
  },
  "additionalProperties": true
}
