{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pdt.dev/schemas/supplier.schema.json",
  "title": "Supplier",
  "description": "A supplier entity for components and assemblies",
  "type": "object",
  "required": ["id", "name", "status", "created", "author"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^SUP-[0-9A-Z]{26}$",
      "description": "Unique identifier (SUP prefix + ULID)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "description": "Company name"
    },
    "short_name": {
      "type": ["string", "null"],
      "description": "Short name for display"
    },
    "website": {
      "type": ["string", "null"],
      "description": "Website URL"
    },
    "contacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "role": { "type": ["string", "null"] },
          "email": { "type": ["string", "null"] },
          "phone": { "type": ["string", "null"] },
          "primary": { "type": "boolean", "default": false }
        }
      },
      "description": "Contact people"
    },
    "addresses": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "type": {
            "type": "string",
            "enum": ["headquarters", "manufacturing", "shipping", "billing"],
            "default": "headquarters"
          },
          "street": { "type": ["string", "null"] },
          "city": { "type": ["string", "null"] },
          "state": { "type": ["string", "null"] },
          "postal": { "type": ["string", "null"] },
          "country": { "type": ["string", "null"] }
        }
      },
      "description": "Physical addresses"
    },
    "payment_terms": {
      "type": ["string", "null"],
      "description": "Default payment terms"
    },
    "currency": {
      "type": "string",
      "enum": ["USD", "EUR", "GBP", "CNY", "JPY"],
      "default": "USD",
      "description": "Preferred currency"
    },
    "certifications": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "expiry": { "type": ["string", "null"], "format": "date" },
          "certificate_number": { "type": ["string", "null"] }
        }
      },
      "description": "Quality certifications"
    },
    "capabilities": {
      "type": "array",
      "items": {
        "type": "string",
        "enum": ["machining", "sheet_metal", "casting", "injection", "extrusion", "pcb", "pcb_assembly", "cable_assembly", "assembly", "testing", "finishing", "packaging"]
      },
      "description": "Manufacturing capabilities"
    },
    "notes": {
      "type": ["string", "null"],
      "description": "Notes about the supplier"
    },
    "tags": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Tags for filtering"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "released", "obsolete"],
      "description": "Entity status"
    },
    "links": {
      "type": "object",
      "properties": {
        "approved_for": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Components this supplier is approved for"
        }
      }
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "author": {
      "type": "string",
      "description": "Author name"
    },
    "entity_revision": {
      "type": "integer",
      "minimum": 1,
      "default": 1,
      "description": "Entity revision number"
    }
  },
  "additionalProperties": true
}
