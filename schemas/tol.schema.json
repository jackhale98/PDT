{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://pdt.dev/schemas/stackup.schema.json",
  "title": "Stackup",
  "description": "A tolerance chain analysis with multiple contributors",
  "type": "object",
  "required": ["id", "title", "target", "status", "created", "author"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^TOL-[0-9A-Z]{26}$",
      "description": "Unique identifier (TOL prefix + ULID)"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Short descriptive title"
    },
    "description": {
      "type": "string",
      "description": "Detailed description"
    },
    "target": {
      "type": "object",
      "required": ["name", "nominal", "upper_limit", "lower_limit"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Name of the target dimension"
        },
        "nominal": {
          "type": "number",
          "description": "Nominal target value"
        },
        "upper_limit": {
          "type": "number",
          "description": "Upper specification limit"
        },
        "lower_limit": {
          "type": "number",
          "description": "Lower specification limit"
        },
        "units": {
          "type": "string",
          "default": "mm",
          "description": "Units"
        },
        "critical": {
          "type": "boolean",
          "default": false,
          "description": "Is this a critical dimension?"
        }
      }
    },
    "contributors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["name", "nominal", "plus_tol", "minus_tol"],
        "properties": {
          "name": {
            "type": "string",
            "description": "Contributor name"
          },
          "feature_id": {
            "type": "string",
            "description": "Optional reference to a Feature entity"
          },
          "direction": {
            "type": "string",
            "enum": ["positive", "negative"],
            "default": "positive",
            "description": "Direction of contribution"
          },
          "nominal": {
            "type": "number",
            "description": "Nominal value"
          },
          "plus_tol": {
            "type": "number",
            "minimum": 0,
            "description": "Plus tolerance"
          },
          "minus_tol": {
            "type": "number",
            "minimum": 0,
            "description": "Minus tolerance"
          },
          "distribution": {
            "type": "string",
            "enum": ["normal", "uniform", "triangular"],
            "default": "normal",
            "description": "Statistical distribution"
          },
          "source": {
            "type": "string",
            "description": "Source reference"
          },
          "gdt_position": {
            "type": "object",
            "description": "GD&T position tolerance contribution. Future: Will support 3D torsor-based analysis.",
            "properties": {
              "position_tolerance": {
                "type": "number",
                "minimum": 0,
                "description": "Position tolerance value (diameter of cylindrical zone)"
              },
              "actual_size": {
                "type": "number",
                "description": "Actual feature size for bonus tolerance calculation (MMC/LMC)"
              },
              "bonus": {
                "type": "number",
                "minimum": 0,
                "description": "Calculated bonus tolerance (departure from MMC/LMC)"
              },
              "effective_tolerance": {
                "type": "number",
                "minimum": 0,
                "description": "Effective position tolerance (position_tolerance + bonus)"
              }
            },
            "required": ["position_tolerance"]
          }
        }
      },
      "description": "Contributors to the stackup"
    },
    "sigma_level": {
      "type": "number",
      "minimum": 1,
      "maximum": 12,
      "default": 6.0,
      "description": "Sigma level for statistical analysis (tolerance = sigma_level × σ). Default 6.0 means tolerance band spans ±3σ."
    },
    "mean_shift_k": {
      "type": "number",
      "minimum": 0,
      "default": 0,
      "description": "Mean shift factor (Bender k-factor) for process drift modeling. Common values: 0.0 (none), 1.5 (automotive/Bender method)."
    },
    "include_gdt": {
      "type": "boolean",
      "default": false,
      "description": "Include GD&T position tolerances in statistical analysis."
    },
    "functional_direction": {
      "type": "array",
      "items": {"type": "number"},
      "minItems": 3,
      "maxItems": 3,
      "description": "Functional measurement direction [dx, dy, dz] for 3D analysis"
    },
    "analysis_3d": {
      "type": "object",
      "properties": {
        "enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable 3D SDT analysis for this stackup"
        },
        "method": {
          "type": "string",
          "enum": ["jacobian_torsor", "monte_carlo_3d"],
          "default": "jacobian_torsor",
          "description": "3D analysis method"
        },
        "monte_carlo_iterations": {
          "type": "integer",
          "default": 10000,
          "description": "Number of iterations for Monte Carlo 3D"
        }
      },
      "description": "3D analysis configuration"
    },
    "analysis_results_3d": {
      "type": "object",
      "properties": {
        "result_torsor": {
          "type": "object",
          "properties": {
            "u": {"$ref": "#/$defs/torsor_stats"},
            "v": {"$ref": "#/$defs/torsor_stats"},
            "w": {"$ref": "#/$defs/torsor_stats"},
            "alpha": {"$ref": "#/$defs/torsor_stats"},
            "beta": {"$ref": "#/$defs/torsor_stats"},
            "gamma": {"$ref": "#/$defs/torsor_stats"}
          },
          "description": "Result torsor with 6-DOF statistics"
        },
        "sensitivity_3d": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "feature_id": {"type": "string"},
              "contribution_pct": {
                "type": "array",
                "items": {"type": "number"},
                "minItems": 6,
                "maxItems": 6,
                "description": "Variance contribution per DOF [u, v, w, α, β, γ] as percentages"
              }
            }
          },
          "description": "3D sensitivity analysis per contributor"
        },
        "jacobian_summary": {
          "type": "object",
          "properties": {
            "chain_length": {"type": "integer"},
            "total_constrained_dof": {"type": "integer"},
            "result_free_dof": {
              "type": "array",
              "items": {"type": "string"}
            }
          },
          "description": "Jacobian chain summary"
        },
        "analyzed_at": {
          "type": "string",
          "format": "date-time",
          "description": "Analysis timestamp"
        }
      },
      "description": "3D analysis results"
    },
    "analysis_results": {
      "type": "object",
      "properties": {
        "worst_case": {
          "type": "object",
          "properties": {
            "min": {"type": "number"},
            "max": {"type": "number"},
            "margin": {"type": "number"},
            "result": {"type": "string", "enum": ["pass", "marginal", "fail"]}
          }
        },
        "rss": {
          "type": "object",
          "properties": {
            "mean": {"type": "number", "description": "Mean (expected) value"},
            "sigma_3": {"type": "number", "description": "3-sigma spread (±3σ)"},
            "margin": {"type": "number", "description": "Margin to specification limits at 3σ"},
            "cp": {"type": "number", "description": "Process capability index (Cp) - ignores centering. Cp = (USL - LSL) / (6σ)"},
            "cpk": {"type": "number", "description": "Process capability index (Cpk) - accounts for centering. Cpk = min(USL-μ, μ-LSL) / (3σ)"},
            "yield_percent": {"type": "number", "description": "Estimated yield percentage"},
            "sensitivity": {
              "type": "array",
              "items": {"type": "number"},
              "description": "Variance contribution percentage for each contributor (sum = 100%)"
            },
            "shifted_mean": {
              "type": "number",
              "description": "Shifted mean when mean_shift_k > 0 (Bender method)"
            }
          }
        },
        "monte_carlo": {
          "type": "object",
          "properties": {
            "iterations": {"type": "integer"},
            "mean": {"type": "number"},
            "std_dev": {"type": "number"},
            "min": {"type": "number"},
            "max": {"type": "number"},
            "yield_percent": {"type": "number"},
            "percentile_2_5": {"type": "number"},
            "percentile_97_5": {"type": "number"},
            "pp": {"type": "number", "description": "Process performance index (Pp) - uses sample std_dev. Pp = (USL - LSL) / (6s)"},
            "ppk": {"type": "number", "description": "Process performance index (Ppk) - uses sample std_dev, accounts for centering. Ppk = min(USL-μ, μ-LSL) / (3s)"}
          }
        }
      },
      "description": "Auto-calculated analysis results"
    },
    "disposition": {
      "type": "string",
      "enum": ["under_review", "approved", "rejected"],
      "default": "under_review",
      "description": "Review disposition"
    },
    "tags": {
      "type": "array",
      "items": {"type": "string"},
      "description": "Tags for filtering"
    },
    "status": {
      "type": "string",
      "enum": ["draft", "review", "approved", "released", "obsolete"],
      "default": "draft",
      "description": "Current status"
    },
    "links": {
      "type": "object",
      "properties": {
        "verifies": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Requirements verified by this stackup"
        },
        "mates_used": {
          "type": "array",
          "items": {"type": "string"},
          "description": "Mates used in this stackup"
        }
      }
    },
    "created": {
      "type": "string",
      "format": "date-time",
      "description": "Creation timestamp"
    },
    "author": {
      "type": "string",
      "description": "Author name"
    },
    "entity_revision": {
      "type": "integer",
      "minimum": 1,
      "default": 1,
      "description": "Entity revision number"
    }
  },
  "$defs": {
    "torsor_stats": {
      "type": "object",
      "properties": {
        "wc_min": {"type": "number", "description": "Worst-case minimum value"},
        "wc_max": {"type": "number", "description": "Worst-case maximum value"},
        "rss_mean": {"type": "number", "description": "Statistical mean"},
        "rss_3sigma": {"type": "number", "description": "Statistical 3-sigma spread"},
        "mc_mean": {"type": "number", "description": "Monte Carlo mean"},
        "mc_std_dev": {"type": "number", "description": "Monte Carlo standard deviation"}
      },
      "description": "Statistics for a single DOF in 3D analysis"
    }
  },
  "additionalProperties": false
}
